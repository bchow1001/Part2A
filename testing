def heapify(arr, n, i):
    """
    Maintains the max-heap property.
    n: size of the heap
    i: index of the current root node
    """
    largest = i  # Initialize largest as root
    left = 2 * i + 1
    right = 2 * i + 2

    # Check if left child exists and is greater than root
    if left < n and arr[left] > arr[largest]:
        largest = left

    # Check if right child exists and is greater than current largest
    if right < n and arr[right] > arr[largest]:
        largest = right

    # If largest is not root, swap and continue heapifying
    if largest != i:
        arr[i], arr[largest] = arr[largest], arr[i]
        heapify(arr, n, largest)

def heap_sort(arr):
    n = len(arr)

    # Step 1: Build a maxheap (rearrange array)
    for i in range(n // 2 - 1, -1, -1):
        heapify(arr, n, i)

    # Step 2: Extract elements one by one
    for i in range(n-1, 0, -1):
        arr[i], arr[0] = arr[0], arr[i] # Swap root with end
        heapify(arr, i, 0) # Heapify the reduced heap

# Example Usage
data = [12, 11, 13, 5, 6, 7]
heap_sort(data)
print("Sorted array (Heap Sort):", data)
import time
import random

def test_heap_sort():
    # Test Cases
    test_cases = {
        "Random List": [random.randint(0, 100) for _ in range(10)],
        "Already Sorted": [1, 2, 3, 4, 5],
        "Reverse Sorted": [5, 4, 3, 2, 1],
        "Empty List": [],
        "Single Element": [42]
    }

    print("--- Heap Sort Functional Testing ---")
    for name, data in test_cases.items():
        original = data.copy()
        heap_sort(data)
        success = (data == sorted(original))
        print(f"{name:15}: {'PASSED' if success else 'FAILED'} | Result: {data}")

# Run Test
test_heap_sort()

def test_hanoi_logic():
    print("\n--- Towers of Hanoi Logic Testing ---")
    for n in range(1, 5):
        # We use a counter to verify the move count matches 2^n - 1
        move_count = 0
        
        # Modified function to return count instead of just printing
        def count_hanoi(n):
            nonlocal move_count
            if n > 0:
                count_hanoi(n-1)
                move_count += 1
                count_hanoi(n-1)
        
        count_hanoi(n)
        theoretical = (2**n) - 1
        print(f"Disks: {n} | Moves: {move_count} | Matches 2^n-1: {move_count == theoretical}")

test_hanoi_logic()
